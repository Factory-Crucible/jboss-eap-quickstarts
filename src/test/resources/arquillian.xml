<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Uncomment to have test archives exported to the file system for inspection -->
    <!--<engine>
        <property name="deploymentExportPath">target/</property>
    </engine>-->

    <!-- Example configuration for a managed JBoss EAP instance -->
    <container qualifier="jboss" default="true">
        <!-- By default, Arquillian will use the JBOSS_HOME environment variable to find the JBoss EAP installation.
             If you prefer not to define the JBOSS_HOME environment variable, alternatively you can uncomment the
             following `jbossHome` property and replace EAP_HOME with the path to your JBoss EAP installation. -->
        <!--<configuration>
            <property name="jbossHome">EAP_HOME</property>
        </configuration> -->
    </container>
</arquillian>
    <!-- Docker container configuration -->
    <container qualifier="wildfly-docker" default="true">
        <configuration>
            <property name="dockerImageName">jboss/wildfly:latest</property>
            <property name="port">8080</property>
        </configuration>
    </container>

    <!-- Database container configuration -->
    <container qualifier="mysql-docker">
        <configuration>
            <property name="dockerImageName">mysql:latest</property>
            <property name="port">3306</property>
            <property name="environmentVariables">
                MYSQL_ROOT_PASSWORD=rootpassword
                MYSQL_DATABASE=testdb
                MYSQL_USER=testuser
                MYSQL_PASSWORD=testpassword
            </property>
        </configuration>
    </container>

    <!-- Arquillian Cube extension for Docker integration -->
    <extension qualifier="docker">
        <property name="dockerContainersFile">docker-compose.yml</property>
        <property name="dockerMachineName">default</property>
        <property name="dockerContainers">
            wildfly:
                image: jboss/wildfly:latest
                exposedPorts: [8080/tcp]
            mysql:
                image: mysql:latest
                exposedPorts: [3306/tcp]
                env: [MYSQL_ROOT_PASSWORD=rootpassword, MYSQL_DATABASE=testdb, MYSQL_USER=testuser, MYSQL_PASSWORD=testpassword]
        </property>
    </extension>
</arquillian>
